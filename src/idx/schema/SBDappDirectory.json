{
    "$schema":"http://json-schema.org/draft-07/schema",
    "title":"SBDappDirectory",
    "type":"object",
    "properties":{
       "dapps":{
          "type":"array",
          "title":"dapps",
          "items":{
             "type":"object",
             "title":"Dapp",
             "properties":{
                "id":{
                   "$ref":"#/definitions/CeramicDocId"
                },
                "name":{
                   "type":"string",
                   "title":"name",
                   "maxLength":250
                },
                "logo":{
                    "type":"string",
                    "title":"logo",
                    "maxLength":500
                 },
                 "shortDescription":{
                    "type":"string",
                    "title":"short description",
                    "maxLength":500
                 },
                 "longDescription":{
                    "type":"string",
                    "title":"long description",
                    "maxLength":5000
                 }
             }
          }
       }
    },
    "required":[
       "notes"
    ],
    "definitions":{
       "CeramicDocId":{
          "type":"string",
          "pattern":"^ceramic://.+(\\?version=.+)?",
          "maxLength":150
       }
    }
 }